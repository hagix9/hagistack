---

- name: ensure temporary image directory exists
  file: >
    path={{ glance_image_tmp_dir }}
    owner=root
    group=root
    mode=0755
    state=directory

- name: get direct images
  get_url: >
    url={{ item.base_url }}/{{ item.file_name }}
    dest={{ glance_image_tmp_dir }}
    mode=0644
  with_items: glance_direct_images
  environment: "{{ proxy_env }}"

#- name: install libguestfs-tools
#  apt: >
#    pkg=libguestfs-tools
#    state=installed

#- name: install libstring-mkpasswd-perl
#  apt: >
#    pkg=libstring-mkpasswd-perl
#    state=installed

#- name: change cirros password 
#  shell: >- 
#    mkpasswd.pl {{ cirros_password }}
#  ignore_errors: True

- name: direct image registeration
  glance: >
    name={{ item.name }}
    file={{ glance_image_tmp_dir }}/{{ item.file_name }}
    format={{ item.format }}
    is_public=true
    auth_url=http://{{ controller_int_ip }}:5000/v2.0
    username={{ admin_user }}
    tenant_name={{ admin_tenant }}
    password={{ admin_password }}
    region={{ region }}
    endpoint_type=publicURL
  with_items: glance_direct_images

